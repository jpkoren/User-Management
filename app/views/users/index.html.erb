<h1>Listing users</h1>
<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |u| %>
			<tr>
				<td><%= u.first_name %></td>
				<td><%= u.last_name %></td>
				<td><%= u.email %></td>
				<td>
					<a href="/users/<%= u.id %>">Show</a> 
					<a href="/users/<%= u.id %>/edit">Edit</a>
				</td>
				<td>
					<form action='/users/<%= u.id %>' method='post'>
						<input type='hidden' name='_method' value='delete'>
						<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
						<input type='submit' value='Destroy'>
					</form>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<p><a href="/users/new">New User</a></p>