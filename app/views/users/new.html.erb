<h1>New User</h1>

<% if @errors %>
	<% @errors.each do |error| %>
	<p><%= error %></p>
	<% end %>
<% end %>

<form action='/users' method='post'>
	<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
	<p><label for='first_name'>First Name</label></p>
	<p><input id='first_name' name='first_name' type='text'></p>
	<p><label for='last_name'>Last Name</label></p>
	<p><input id='last_name' name='last_name' type='text'></p>
	<p><label for='email'>Email</label></p>
	<p><input id='email' name='email' type='text'></p>
	<p><label for='password'>Password</label></p>
	<p><input id='password' name='password' type='password'></p>
	<p><input type='submit' value='Create User'></p>
</form>
<p><a href="/users">Back</a></p>